{
  "manifest_version": 2,
  "name": "Dressr",
  "version": "0.1",
  "content_scripts":
   [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js", "js/main.js"],
            "run_at": "document_end"
        }
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
         "default_popup": "sign-in.html",
         "default_title": "Review Your Wardrobe!"
    },
    "permissions": [
        "storage",
        "tabs",
        "notifications"
    ]
}